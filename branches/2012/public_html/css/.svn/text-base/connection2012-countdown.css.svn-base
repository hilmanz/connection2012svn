@font-face {
	font-family: 'BebasNeueRegular';
	src: url('../font/bebasneue-webfont.eot');
	src: url('../font/bebasneue-webfont.eot?#iefix') format('embedded-opentype'),
	     url('../font/bebasneue-webfont.woff') format('woff'),  
	     url('../font/bebasneue-webfont.ttf') format('truetype'),  
	     url('../font/bebasneue-webfont.svg#BebasNeueRegular') format('svg');
	font-weight: normal;
	font-style: normal;
}
@font-face {
    font-family: 'DINMediumRegular';
    src: url('../font/din-webfont.eot');
    src: url('../font/din-webfont.eot?#iefix') format('embedded-opentype'),
         url('../font/din-webfont.woff') format('woff'),
         url('../font/din-webfont.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
}
@font-face {
    font-family: 'BlackoutMidnight';
    src: url('../font/Blackout-Midnight-webfont.eot');
    src: url('../font/Blackout-Midnight-webfont.eot?#iefix') format('embedded-opentype'),
         url('../font/Blackout-Midnight-webfont.woff') format('woff'),
         url('../font/Blackout-Midnight-webfont.ttf') format('truetype'),
         url('../font/Blackout-Midnight-webfont.svg#BlackoutMidnight') format('svg');
    font-weight: normal;
    font-style: normal;
}
@font-face {
    font-family: 'Blackout2AM';
    src: url('../font/Blackout-2am-webfont.eot');
    src: url('../font/Blackout-2am-webfont.eot?#iefix') format('embedded-opentype'),
         url('../font/Blackout-2am-webfont.woff') format('woff'),
         url('../font/Blackout-2am-webfont.ttf') format('truetype'),
         url('../font/Blackout-2am-webfont.svg#Blackout2AM') format('svg');
    font-weight: normal;
    font-style: normal;
}
body{
	background:url(../img/bg_all.jpg) repeat #eaeaea;
	font-family: 'BebasNeueRegular';
	font-size:28px;
	color:#333;
	margin:0;
	padding:0;
	overflow-x:hidden;
}
a{
	outline:none;
}
#bgCountdown{
	background:url(../img/bg_countdown.png) no-repeat center;
	overflow:hidden;
	width:100%;
	height:100%;
}
#bgShadowCountdown{
	background:url(../img/shadows.png) no-repeat;
	overflow:hidden;
	width:1200px;
	position:absolute;
	left:0;
	bottom:0;
	height:1012px;
}
#countdown{
	width:960px;
	height:571px;
	margin:30px auto;
	position:relative;
	color:#fff;
}
#countdown_dashboard {
    height: 80px;
    left: 163px;
    position: absolute;
    top: 353px;
    width: 500px;
}
.dash {
	width: 75px;
	height: 75px;
	float: left;
	margin:0 60px 0 0;
	position: relative;
}

.dash .digit {
	font-size: 45pt;
	float: left;
	width:30px;
	text-align: center;
	position: relative;
}

.dash_title {
	position: absolute;
	display: block;
	bottom: 0px;
	right: 23px;
	font-size: 9pt;
	letter-spacing: 2px;
}

.hours_dash .dash_title{
	right:27px;
}
.days_dash .dash_title{
	right:31px;
}
.weeks_dash, .days_dash{
	display:none;
}

/* ============ FOOTER =================*/
#footer {
	position: fixed;
	bottom: 0;
	left: 0;
	z-index: 99;
	border-bottom: none;
	width:100%;
	height:135px;
	text-transform:uppercase;
    font-family: 'DINMediumRegular';
}
#hw {
	background:url(../img/hw.png) center #000 no-repeat;
	height:90px;
}
.menu-footer {
	background:url(../img/transparent-white.png) repeat;
	text-align:center;
	border:solid 1px #ccc;
	line-height: 15px;
	font-size:8pt;
}
.menu-footer a {
	color:#333;
	display: inline-block;
	padding: 5px 20px;
	text-decoration: none;
}
.menu-footer a:hover{
	color:#666;
}
#site-info {
	background:url(../img/transparent-white2.png) repeat;
	text-align:center;
	line-height: 24px;
	font-size:8pt;
}
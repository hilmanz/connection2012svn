@import url(https://fonts.googleapis.com/css?family=Oswald);
body{
	background:url(../img/bg_all.jpg) repeat #eaeaea;
	font-family: 'Oswald', sans-serif;
	font-size:28px;
	color:#333;
	margin:0;
	padding:0;
}
a{
	text-decoration:none;
	outline:none;
}
#close{
	background:url(../img_close/mc2012_close.jpg) no-repeat;
	width:980px;
	height:560px;
	position:relative;
	margin:0 auto;
}
/* ============ FOOTER =================*/

.footer {
	padding:20px 0 0 0;
	font-size:18px;
}
.footer ul {
	margin:0;
	padding:0;
}
.footer ul li {
	display:inline;
}
#footer {
	font-size:16px;
	text-align:center;
	border-bottom: none;
	width:100%;
	height:250px;
	text-transform:capitalize;
}
#hw {
	background:url(../img/hw.png) center #000 no-repeat;
	height:90px;
}
.menu-footer {
	background:url(../img/transparent-white.png) repeat;
	text-align:center;
	border:solid 1px #ccc;
	line-height: 15px;
	font-size:8pt;
}
#footer a {
	color:#C00;
	display: inline-block;
	padding: 5px 20px;
	text-decoration:underline;
}
#footer a:hover{
	color:#666;
}
#site-info {
	background:url(../img/transparent-white2.png) repeat;
	text-align:center;
	line-height: 24px;
	font-size:8pt;
}
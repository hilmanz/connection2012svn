<script>

var intervalHighest = setInterval(highest,1000*3);

function highest(){
	$.post('index.php?s=dashboard&act=getHighestBidder',function(data){
			if(data){
				for(var idxData in data){
					$('.'+data[idxData].auction_id+'_totalAmount').html(data[idxData].totalAmount);
					$('.'+data[idxData].auction_id+'_tUser').html(data[idxData].tUser);
					$('.'+data[idxData].auction_id+'_name').html(data[idxData].name);
				}
			}
	});
}


</script>
